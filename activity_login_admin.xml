<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAdminActivity">

    <!-- Background foto + overlay lembut -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1"
        android:contentDescription="@string/app_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40FFFFFF" />

    <!-- Konten scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Kartu putih -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="28dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="22dp">

                    <!-- Judul -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ADMIN"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#111111"
                        android:layout_marginBottom="16dp" />

                    <!-- Logo + nama -->
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/dd"
                        android:contentDescription="HydroGuard"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HydroGuard"
                        android:textAlignment="center"
                        android:textColor="#7ABF2E"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="18dp" />

                    <!-- EMAIL -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#E0E0E0"
                        app:boxStrokeWidth="0dp"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp"
                        app:hintEnabled="false"
                        app:startIconDrawable="@drawable/ic_email_24"
                        app:startIconTint="#6E6E6E">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:textColor="#111111"
                            android:textColorHint="#9E9E9E"
                            android:paddingVertical="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#E0E0E0"
                        app:boxStrokeWidth="0dp"
                        app:boxCornerRadiusTopStart="24dp"
                        app:boxCornerRadiusTopEnd="24dp"
                        app:boxCornerRadiusBottomStart="24dp"
                        app:boxCornerRadiusBottomEnd="24dp"
                        app:hintEnabled="false"
                        app:startIconDrawable="@drawable/ic_lock_24"
                        app:startIconTint="#6E6E6E"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#6E6E6E">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textColor="#111111"
                            android:textColorHint="#9E9E9E"
                            android:paddingVertical="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Tombol Masuk -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMasuk"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Masuk"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        app:cornerRadius="26dp"
                        app:backgroundTint="#A5D62D"
                        app:rippleColor="#80A5D62D" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Overlay loading optional -->
    <View
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />
</FrameLayout>


