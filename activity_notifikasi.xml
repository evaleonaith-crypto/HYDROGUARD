<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ManualControlActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ======= HEADER ======= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_arrow_left_alt_24"
                android:contentDescription="@string/btn_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_control_screen"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/textPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ======= KARTU 1: Mode Sistem ======= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="18dp"
            app:strokeColor="@color/dividerGreen"
            app:strokeWidth="2dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mode sistem"
                    android:textStyle="bold"
                    android:textColor="@color/hd_green_dark"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dividerGreen"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/modeGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/modeManual"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_pill_choice"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="@string/mode_manual"
                        android:textColor="@color/hd_green_dark"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="match_parent" />

                    <RadioButton
                        android:id="@+id/modeAuto"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_pill_outline"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/mode_auto"
                        android:textColor="@color/hd_green_dark"
                        tools:ignore="TouchTargetSizeCheck" />
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ======= KARTU 2: Kontrol Pompa ======= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="18dp"
            app:strokeColor="@color/dividerGreen"
            app:strokeWidth="2dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kontrol Pompa Air"
                    android:textStyle="bold"
                    android:textColor="@color/hd_green_dark"
                    android:textSize="16sp"
                    android:gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/dividerGreen" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPumpState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status pompa: Mati"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/dotState"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/shape_dot_red" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPumpAction"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/btn_pump_on"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    app:cornerRadius="24dp"
                    app:backgroundTint="#A5D62D"
                    app:rippleColor="#66227A14" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ======= KARTU 3: Informasi Jadwal (READ ONLY) ======= -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardJadwalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="18dp"
            app:strokeColor="@color/dividerGreen"
            app:strokeWidth="2dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi Jadwal"
                    android:textStyle="bold"
                    android:textColor="@color/hd_green_dark"
                    android:textSize="16sp"
                    android:gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/dividerGreen" />

                <!-- Empty state: tampil jika jadwal belum diisi di Setting -->
                <TextView
                    android:id="@+id/tvJadwalEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jadwal otomatis belum diatur. Silakan atur di menu Pengaturan."
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:visibility="visible" />

                <!-- Jadwal: tampil hanya jika ada data -->
                <LinearLayout
                    android:id="@+id/layoutJadwalItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvLast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Pagi: [ - ]"
                        android:textColor="#6D6D6D"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sore: [ - ]"
                        android:textColor="#6D6D6D"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />
    </LinearLayout>
</ScrollView>
